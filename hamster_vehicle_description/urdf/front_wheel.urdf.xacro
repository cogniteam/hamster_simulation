<?xml version="1.0"?>
<robot name="front_wheel" xmlns:xacro="http://www.ros.org/wiki/xacro">
  
  <!-- Wheels -->
  <xacro:property name="wheel_radius" value="0.029" /> 
  <xacro:property name="wheel_height" value="0.02" />
  <xacro:property name="wheel_mass" value="0.1" /> <!-- in kg-->
  
  <!-- <xacro:property name="base_x_origin_to_wheel_origin" value="0.25" />
  <xacro:property name="base_y_origin_to_wheel_origin" value="0.3" />
  <xacro:property name="base_z_origin_to_wheel_origin" value="0.0" /> -->
  
  <xacro:macro name="cylinder_inertia" params="m r h">
    <inertia  ixx="${m*(3*r*r+h*h)/12}" ixy="0" ixz="0"
              iyy="${m*(3*r*r+h*h)/12}" iyz="0"
              izz="${m*r*r/2}" /> 
  </xacro:macro>
  
  <xacro:macro name="wheel" params="fr lr parent origin_x origin_y origin_z"> <!--fr : front, rear ; lr: left, right -->
    <link name="${fr}_${lr}_wheel">
      <visual>
        <origin xyz="0 0 0" rpy="1.57 0 0" /> 
        <geometry>
          <box size="0.01 0.01 0.01" />
        </geometry>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="1.57 0 0" />
        <geometry>
          <cylinder length="${wheel_height}" radius="${wheel_radius}" />
        </geometry>
      </collision>
      <inertial>
        <mass value="${wheel_mass}" />
        <origin xyz="0 0 0" rpy="1.57 0 0" />
        <cylinder_inertia  m="${wheel_mass}" r="${wheel_radius}" h="${wheel_height}" />
      </inertial>
    </link>

    <link name="${fr}_${lr}_wheel_steering">
      <visual>
        <origin xyz="0 0 0" rpy="1.57 0 0" /> 
        <geometry>
          <!-- <cylinder length="${wheel_height}" radius="${wheel_radius}" /> -->
          <mesh filename="package://hamster_vehicle_description/meshes/wheel.dae" />
        </geometry>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="1.57 0 0" />
        <geometry>
          <cylinder length="${wheel_height}" radius="${wheel_radius}" />
        </geometry>
      </collision>
      <inertial>
        <mass value="${wheel_mass}" />
        <origin xyz="0 0 0" rpy="1.57 0 0" />
        <cylinder_inertia  m="${wheel_mass}" r="${wheel_radius}" h="${wheel_height}" />
      </inertial>
    </link>

    <gazebo reference="${fr}_${lr}_wheel">
     <collision>
      <surface>
        <friction>
          <torsional>
            <coefficient>0.1</coefficient>
            <use_patch_radius>false</use_patch_radius>
            <patch_radius>0.05</patch_radius>
          </torsional>
        </friction>
      </surface>
     </collision>
    </gazebo>

    <joint name="${fr}_${lr}_wheel_joint" type="continuous">
      <parent link="${parent}"/>
      <child link="${fr}_${lr}_wheel"/>
      <origin xyz="${origin_x} ${origin_y} ${origin_z}" rpy="0 0 0" /> 
      <axis xyz="0 1 0" rpy="0 0 0" />
      <!-- <dynamics damping="0.7"/> -->
    </joint>

        <joint name="${fr}_${lr}_wheel_steering_joint" type="continuous">
      <parent link="${parent}"/>
      <child link="${fr}_${lr}_wheel_steering"/>
      <origin xyz="${origin_x} ${origin_y} ${origin_z}" rpy="0 0 0" /> 
      <axis xyz="0 0 1" rpy="0 0 0" />
      <!-- <dynamics damping="0.7"/> -->
    </joint>

    <!-- Transmission is important to link the joints and the controller -->
    <transmission name="${fr}_${lr}_wheel_joint_trans">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="${fr}_${lr}_wheel_joint">
          <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
      </joint>
      <actuator name="${fr}_${lr}_wheel_joint_motor">
        <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
        <mechanicalReduction>1</mechanicalReduction>
      </actuator>
    </transmission>
   
  </xacro:macro>
</robot>
