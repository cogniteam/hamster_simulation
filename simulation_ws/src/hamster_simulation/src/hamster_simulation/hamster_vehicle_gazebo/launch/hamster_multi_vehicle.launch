<?xml version="1.0"?>
<launch>
  <!-- /////////////////////////////////////////////////////////////////////////////////// -->
  <!-- To Add more agents, simply copy the group below and change the agent id -->
  <!-- /////////////////////////////////////////////////////////////////////////////////// -->

  <env name="GAZEBO_MODEL_PATH" value="$(find hamster_vehicle_gazebo)/models"/>
  <arg name="cmd_timeout" default="0.5"/>
  <arg name="use_joystick" default="false"/>

  <include file="$(find hamster_vehicle_gazebo)/launch/hamster_world.launch"/>

  <!-- /////////////////////////////////////////////////////////////////////////////////// -->
  <!-- ///////////////////////////////////// Agent1 ////////////////////////////////////// -->
  <!-- /////////////////////////////////////////////////////////////////////////////////// -->
  <group>
    <param name="robot_description" command="$(find xacro)/xacro $(find hamster_vehicle_description)/urdf/hamster.urdf.xacro"/>
    <include file="$(find hamster_vehicle_gazebo)/launch/hamster_vehicle_spawner.launch">
      <arg name="robot_description" value="robot_description"/>
      <arg name="agent" value="agent1"/>
      <arg name="cmd_timeout" value="$(arg cmd_timeout)"/>
      <arg name="use_joystick" value="$(arg use_joystick)"/>
      <arg name="joystick_dev" value="/dev/input/js0"/>
      <arg name="sx" value="1"/>
      <arg name="sy" value="1"/>
    </include>

  </group>

  <!-- /////////////////////////////////////////////////////////////////////////////////// -->
  <!-- ///////////////////////////////////// Agent2 ////////////////////////////////////// -->
  <!-- /////////////////////////////////////////////////////////////////////////////////// -->
  <group>
    <param name="robot_description1" command="$(find xacro)/xacro $(find hamster_vehicle_description)/urdf/hamster.urdf.xacro"/>
    <include file="$(find hamster_vehicle_gazebo)/launch/hamster_vehicle_spawner.launch">
      <arg name="robot_description" value="robot_description1" />
      <arg name="agent" value="agent2"/>
      <arg name="cmd_timeout" value="$(arg cmd_timeout)"/>
      <arg name="use_joystick" value="$(arg use_joystick)"/>
      <arg name="joystick_dev" value="/dev/input/js0"/>
      <arg name="sx" value="2"/>
      <arg name="sy" value="1"/>
    </include>

  </group>
</launch>
